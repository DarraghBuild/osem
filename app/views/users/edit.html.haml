.container
  .row
    .col-md-12
      .page-header
        %h1 Editar tu perfil
  .row
    .col-md-12
      = semantic_form_for(@user, url: user_path(@user.id)) do |f|
        = f.input :name, as: :string, hint: 'Este es tu nombre completo'
        = f.input :nickname, as: :string, hint: 'Es como te visualizaran los otros usuarios, no es tu nombre real'
        .control-label
          = "Avatar"
        = image_tag(@user.gravatar_url(size: '48'), title: "Yo #{@user.name}!", alt: '')
        = link_to 'Cambia tu avatar aqui', 'https://gravatar.com'
        = f.input :affiliation, as: :string,
          hint: 'Esto puede ser un emprendimiento, una compañia o un grupo.'
        = f.input :biography, input_html: { rows: 5, data: { provide: 'markdown' } },
          hint: markdown_hint
        Tu has usado
        %span#bio_length
          = @user.biography ? @user.biography.split.length : 0
        words.  Biografias estan limitadas a 150 carácteres.
        %br
        %br
        = f.action :submit, as: :button, label: 'Actualizar', button_html: {class: 'btn btn-primary'}
